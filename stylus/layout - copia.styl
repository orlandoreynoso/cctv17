
html,body,div
	margin 0
	padding 0
*
	margin 0
	padding 0
	box-sizing border-box	
	
body
	background-color #fff

#page-wrap
	display flex
	/*flex-flow row wrap*/
	flex-direction row
	flex-wrap wrap
	width 100%


.zero-grid
	width 1024px





section 
	width 100%
	background-color #f5f5f5
	margin 0px auto


.contenido
	margin 0px auto
	max-width 1024px
	background-color red
	display flex
	justify-content space-between
	align-content space-between
	flex-wrap wrap
	flex-direction row
	
	.noticias
		background-color magenta		
		flex 1 1 70%
		padding 20px
		
	.redes
		background-color green
		width 30%
		padding 10px		
		/*FLEX*/
		
		flex 1 1 30%
		
		iframe
			margin 0
			padding 0


.player-seccions 
	margin 0px auto
	max-width 1024px
	max-height 450px
	background-color #f5f5f5
	display flex
	flex-wrap wrap
	flex-direction row
	justify-content space-between
	padding 30px 5px 15px 5px
	
	.player
		background-color red
		width 50%
		height auto
		
		iframe
			width 100%
			min-height 350px

	.seccions
		width 50%
		height auto
		background-color magenta
		display flex
		flex-wrap wrap
		justify-content center		
		align-items stretch

		
		.secciones
			width 180px
			background-color #8ac249
			flex-grow 1
			display block
			margin 10px
			text-align center
			vertical-align middle
			align-items center
			justify-content center
			display flex
			color #fff
			text-decoration none
			font-family 'Myriad Pro'
			text-transform uppercase
			font-size 14px;		
			
			
		.seccions_1
			background-color #fec006
						
			&:hover
				background-color #8ac249	
		
		.seccions_2						
			background-color #8ac249	
			
			&:hover			
				background-color #00bbd3			
				
		.seccions_3			
			background-color #00bbd3
			
			&:hover
				background-color #fec006
					
			
		.seccions_4			
			background-color #fec006
			
			&:hover	
				background-color #8ac249			



header
	width 100%
	height 289px
	background-color #fff
	padding 0px 0px 0px 0px
	margin 0px auto
	display flex
	flex-direction column
	justify-content space-between

.contenedor_menu
	background-color #474b4d
	align-items center
	width 100%
	margin 0px auto
	padding 0px;
	clear both
	
	nav
		max-width 1024px
		margin 0px auto

	ul.menu
		background-color #ffd933
		height 96px
		list-style none		
		
		/*FLEX*/
		display flex
		justify-content space-around

		li 
			align-items center
			flex-grow 1
			text-align center
			margin 0px auto
			overflow hidden
			
	
			
			a
				vertical-align top
				display block
				vertical-align middle
				padding 36px 0px 36px 0px
				font-family 'Myriad Pro'
				color #474b4d
				text-transform uppercase
				text-decoration none
				
				&:hover
					background-color white
					color #474b4d


