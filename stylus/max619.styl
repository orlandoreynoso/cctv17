
@media screen and (max-width 619px)
  
	#page-wrap
		flex-direction column
	
	#cabecera-contenedor
		max-width t619


		#cc-logo-slogan
			background-color blue
			width 100%			
			display flex
			justify-content space-between
			align-content space-between
			flex-wrap wrap
			flex-direction row			
			
			
			.logo-link
				width 30%
				
				img
					width 100%
					
			.slogan
				width 60%
				
				.one
					font-size 1.7em
					color red
					
				.two
					font-size 1.7em
					color green
		

		#cc-search-followers
			width 100%
			margin-top 10px
			padding 7px

	.player-seccions
		max-width t619
		display flex
		height auto
		background-color cyan
		
		.player			
			padding 0px
			width 100%

			iframe 
				width 100%
				height 100%
				min-height 300px
		
		.seccions
			width 100%

	.contenido
		max-width t619
		height auto
		background-color orange
		
		.noticias
			width 100%
		
		.redes
			width 100%